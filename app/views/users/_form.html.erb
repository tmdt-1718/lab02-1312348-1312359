<%= render 'shared/errors', obj: @user %>

<div class="row justify-content-md-center">
  <div class="col-4">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      
      <div class="form-group">
        <div class="control-label col">
          <%= f.label :email %>
        </div>
        <div class="col">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter your email", :disabled => @user.new_record? ? false : true %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="control-label col">
          <%= f.label :name %>
        </div>
        <div class="col">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter your name" %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="control-label col">
          <%= f.label :password %>
        </div>
        <div class="col">
          <%= f.password_field :password, class: "form-control", placeholder: "Choose a password" %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="control-label col">
          <%= f.label :password_confirmation, "Confirm Password" %>
        </div>
        <div class="col">
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm password" %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col">
          <%= f.submit(@user.new_record? ? "Create account" : "Update account", 
                                                    class: "btn btn-primary btn-lg btn-xlarge") %>
        </div>
      </div>
      
    <% end %>
  </div>
</div>

